generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url= env("DATABASE_URL")
}

enum OrderStatus {
  created
  cancelled
}

model Order {
  id        String      @id           // você continuará gerando (ex.: o_xxxxxx)
  userId    String
  items     Json
  total     Decimal     @db.Decimal(10,2)
  status    OrderStatus @default(created)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([userId])
}

